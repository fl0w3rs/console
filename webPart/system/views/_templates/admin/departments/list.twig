{% extends "_components/layouts/layout-admin.twig" %}

{% block title %}Список департаментов{% endblock %}

{% block content %}

<div class="row justify-content-center">
    <div class="mt-3 col-12 col-md-10 col-lg-8">
        <div class="py-2 rounded text-center position-relative bg-main">
            <div class="position-absolute w-100">
                <h2>Департаменты</h2>
            </div>
            <div class="text-right">
                <a href="{{config['dir_prefix']}}admin/departments/new">
                    <button class="btn text-white btn-rounded btn-flat btn-sm">Создать<i class="fas fa-plus pl-1"></i></button>
                </a>
            </div>
            <table class="table btn-table text-white">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Название</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    {% for department in departments %}
                        <tr data-dept-id="{{department.id}}">
                            <td>{{department.id}}</td>
                            <td>{{department.name}}</td>
                            <td>
                                <button class="btn btn-rounded btn-flat btn-sm dropdown-toggle m-0" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Действие
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="{{config['dir_prefix']}}admin/departments/{{department.id}}">Редактировать</a>
                                    <a class="dropdown-item" data-action="remove-dept">Удалить</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>

{% endblock %}

{% block scripts %}
<script type="text/javascript" src="{{config['dir_prefix']}}assets/js/admin/departments/list.js?ver={{version}}"></script>
{% endblock %}