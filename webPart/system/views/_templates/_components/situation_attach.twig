<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-main">
        <div class="modal-header">
            <h5 class="modal-title">Прикрепление {{situation.display_title}}</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span class="text-white" aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <select id="unitSelectEl" class="border-0 mdb-select md-outline md-form m-0 elevation--z4 rounded" multiple searchable="Поиск">
                <option value="" disabled selected>Выберите юнитов</option>
                {% for key, unit in units %}
                    <option value="{{unit.uid}}">{{units_char[key]['name']}}</option>
                {% endfor %}
            </select>

            <button class="mt-3 btn btn-md btn-block btn-danger z-depth-0" onclick="sendWebsocket('attach-units-to-situation', {sitid: {{situation.id}}, units: $('#unitSelectEl').val()}); hideAllModals();" type="button"><i class="fas fa-paperclip" aria-hidden="true"></i> Прикрепить</button>
        </div>
    </div>
</div>